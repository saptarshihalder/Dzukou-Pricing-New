{
  "name": "ai-price-optimizer",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered competitive pricing optimization for eco-conscious brands",
  "author": "Price Optimizer Team",
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "backend:dev": "cd api && uv run uvicorn api.main:app --reload --host 127.0.0.1 --port 8000",
    "backend:start": "cd api && uv run uvicorn api.main:app --host 127.0.0.1 --port 8000",
    "dev:full": "concurrently \"pnpm backend:dev\" \"pnpm dev\"",
    "start:full": "concurrently \"pnpm backend:start\" \"pnpm start\"",
    "electron:dev": "concurrently \"pnpm backend:dev\" \"pnpm dev\" \"wait-on http://localhost:3000 && wait-on http://localhost:8000/routes/health && electron .\"",
    "electron:start": "electron .",
    "electron:build": "pnpm build && electron-builder",
    "electron:build:win": "pnpm build && electron-builder --win",
    "electron:build:msi": "pnpm build && electron-builder --win msi",
    "electron:build:mac": "pnpm build && electron-builder --mac",
    "electron:build:linux": "pnpm build && electron-builder --linux"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.545.0",
    "next": "15.4.10",
    "next-themes": "^0.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "2.15.4",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.4.10",
    "shadcn": "^3.4.0",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.priceoptimizer.ai",
    "productName": "Price Optimizer AI",
    "directories": {
      "output": "dist-electron",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "api",
        "to": "api",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/.venv/**",
          "!**/tests/**",
          "!**/*.pyc"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis",
        "msi",
        "portable"
      ],
      "icon": "public/icon.ico"
    },
    "msi": {
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
